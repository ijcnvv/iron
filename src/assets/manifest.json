{
  "manifest_version": 2,
  "version": "1.49.8",

  "name": "Haddan extension (Iron Cohort edition)",
  "short_name": "Haddan extension",
  "description": "Приложение для игры Haddan, направленное на улучшение игрового процесса",

  "author": "Just Crazy",

  "page_action": {
    "default_title": "Haddan extension",
    "default_icon": "img/irons.png"
  },

  "background": {
    "scripts": [
      "js/bg.js"
    ]
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "*://haddan.ru/room/room.php*",
        "*://www.haddan.ru/room/room.php*",

        "*://online-igra.ru/room/room.php*",
        "*://www.online-igra.ru/room/room.php*"
      ],
      "js": [
        "js/room.js"
      ],
      "run_at": "document_end"
    }
  ],

  "icons": {
    "128": "img/irons.png",
    "64": "img/irons.png",
    "32": "img/irons.png",
    "48": "img/irons.png",
    "16": "img/irons.png"
  },

  "permissions": [
    "tabs",
    "unlimitedStorage",
    "*://haddan.ru/*",
    "*://www.haddan.ru/*",
    "*://online-igra.ru/*",
    "*://www.online-igra.ru/*"
  ]
}